
@{
    Layout = null;
}
<style>
    .sma {
        margin: 0;
        min-width: 30px;
  line-height: 20px;
  min-height: 20px;
    }
    /*.sma2 {
        height: 20px;
    }
    .md-button.md-icon-button .md-ripple-container {
        height: 30px;
