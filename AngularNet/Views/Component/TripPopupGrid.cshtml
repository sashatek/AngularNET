
@{
    Layout = null;
}

<div>
    <button type="button" class="btn btn-primary" ng-click="gc.addTrip()">
        Add New Trip
    </button>
    
</div>

<div ng-repeat="model in gc.trip.list  | filter:ac.searchText" class="tripList" @*ng-click="gc.editTrip(model)*@">
    <p style="position: absolute; bottom: 10px; right: 10px">
        <button type="button" class="btn btn-primary btn-xs" ng-click="gc.editTrip(model, tripForm)">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
        <button type="button" class="btn btn-warning  btn-xs" ng-click="gc.deleteTrip(model, tripForm)"
                ng-show="!model.isNew">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
    </p>
    <h3>
        <b>{{model.tripDate_ | date : "MM/dd/yyyy"}}</b>
        <b>{{model.airportId_.text}}</b>
    </h3>
        {{model.airportId_.text2}}
        <p>{{model.transTypeId_.text}}</p>
        <p>{{model.groupName}} {{model.groupSize}}</p>
 
</div>
