
@{
    Layout = null;
}
    <table class="table" ng-show="gc.editMode==0">
        <tr>
            <th>Trip Date</th>
            <th>Airport</th>
            <th>Airport Name</th>
            <th>Trans Type Id</th>
            <th>Group Name</th>
            <th>Group Size</th>
            <th>
                <button type="button" class="btn btn-primary btn-xs" ng-click="gc.addTrip(tripForm)">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
            </th>
        </tr>
        <tr ng-repeat="model in gc.trip.list  | filter:ac.searchText" ng-form="tripForm" @*ng-click="gc.editTrip(model, tripForm)*@ ">
            <td>
                {{model.tripDate_ | date : "MM/dd/yyyy"}}
            </td>
            <td>{{model.airportId_.text}}</td>
            <td>{{model.airportId_.text2}}</td>
            <td>
                {{model.transTypeId_.text}}
                @*<select ng-model="model.transTypeId" ng-options="o.value as o.text for o in gc.ds.ref.transTypes"
                    class="form-control" id="transTypeId" required not-set="-1"
                    disabled="disabled" style="background:white;border:none;"></select>*@
            </td>
            <td>
                {{model.groupName}}
            </td>
            <td>
                {{model.groupSize}}
            </td>
            <td>
                <button type="button" class="btn btn-primary btn-xs" ng-click="gc.editTrip(model, tripForm)">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
            </td>
            <td>
                <button type="button" class="btn btn-warning  btn-xs" ng-click="gc.deleteTrip(model, tripForm)"
                        ng-show="!model.isNew">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    </table>
    @*<div ng-if="gc.editMode==1" ng-include="urlApp + 'Partial/TripForm' "></div>*@
    <div ng-if="gc.editMode==1" class="col-md-3">
        <trip-form ds="gc.ds" model="gc.trip.model" on-cancel="gc.cancelTrip()"
                        on-save="gc.saveTrip(form)" form-init="gc.formInit(form)"></trip-form>
    </div>



